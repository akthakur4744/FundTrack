    "clean": "turbo run clean && rm -rf node_modules"
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
